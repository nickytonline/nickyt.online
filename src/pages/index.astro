---
import Layout from "../layouts/Layout.astro";
import { SocialLinks } from "../components/SocialLinks";
---

<Layout title="Social Links | Nick Taylor">
  <main class="min-h-screen bg-gray-50 flex items-center justify-center p-4">
    <div class="flex flex-col items-center gap-8">
      <img
        src="https://res.cloudinary.com/nickytonline/image/upload/c_scale,h_300,w_300/v1653353570/alpaca-icon_r9sskj.png"
        alt=""
        width="300"
        height="300"
      />
      <SocialLinks />
      <div class="grid gap-2 font-sans text-2xl text-center">
        <p>
          Blogging, talks, and more at <a
            class="underline hover:text-pink-700 focus-within:text-pink-700"
            href="https://nickyt.co">nickyt.co</a
          >
        </p>
        <p>
          Live streaming at <a
            class="underline hover:text-pink-700 focus-within:text-pink-700"
            href="https://nickyt.live">nickyt.live</a
          >
        </p>
        <p>
          Subscribe to my newsletter <a
            class="underline hover:text-pink-700 focus-within:text-pink-700"
            href="https://onetipaweek.com">OneTipAWeek.com</a
          >
        </p>
      </div>
    </div>
  </main>
</Layout>
